{
  "name": "count-in-multiples",
  "version": "0.0.9",
  "description": "Count along to your multiple of choice",
  "browser": "build/js/countinmultiples.js",
  "author": "Toni Price (http://toni.rbind.io/)",
  "license": "MIT",
  "scripts": {
    "with-env": "dotenv-run-script .env --",
    "lint": "eslint src/js/*.js",
    "copy:assets": "copyfiles -u 2 \"src/assets/**/*\" build/assets",
    "copy:favicon": "copyfiles -u 2 \"src/favicon/*\" build/",
    "copy:css": "copyfiles -u 2 \"src/css/**/*.css\".css build/css",
    "copy:js": "copyfiles -u 2 \"src/minjs/**/*.js\" build/js",
    "copy:html": "copyfiles -u 1 \"src/**/*.html\" build",
    "copy:md": "copyfiles -u 1 \"src/**/*.md\" build",
    "copytobuild": "npm-run-all --print-name --parallel copy:*",
    "build:sass": "sass --no-source-map src/sass:build/css",
    "build:js": "bash ./tools/minify-js-exploded.sh",
    "build:jsdoc": "jsdoc --configure jsdoc.json -d build/docs",
    "dev:build": "npm-run-all --print-name --sequential clean build:* copytobuild",
    "dev:sass": "sass --watch --update --style=expanded  src/sass:src/css",
    "clean": "touch ./build/PLACEHOLDER.txt && rm -r ./build/*",
    "prebuild": "bash ./tools/check-log-level.sh",
    "build": "npm-run-all --print-name --sequential clean build:* copytobuild",
    "postbuild": "postcss \"build/css/*.css\" --replace --no-map --use autoprefixer cssnano",
    "jsdoc:clean": "rm -r ./build/docs/*",
    "jsdoc:refresh": "npm-run-all --print-name --sequential jsdoc:clean build:jsdoc",
    "deploy:clean": "bash ./tools/clean-dest.sh",
    "deploy:copy": "copyfiles -u 1 \"build/**/*\" \"$DEPLOY_PATH\"",
    "deploy:build": "npm-run-all --print-name --sequential build deploy:clean deploy:copy",
    "deploy": "dotenv-run-script .env -- deploy:build",
    "browser:debug": "browser-sync start --server src/ --port 8020 --ui-port=8021 --no-open",
    "browser:noopen": "browser-sync start --server src/ --no-open",
    "browser:dev": "browser-sync start --server src/ --browser $BROWSER",
    "browser:build": "browser-sync start --server build/ --browser $BROWSER",
    "debug": "dotenv-run-script .env -- browser:debug",
    "preview:dev": "dotenv-run-script .env -- browser:dev",
    "preview:build": "dotenv-run-script .env -- browser:build"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "autoprefixer": "^10.4.17",
    "browser-sync": "^3.0.2",
    "clean-jsdoc-theme": "^4.2.17",
    "copyfiles": "^2.4.1",
    "cssnano": "^7.0.1",
    "dotenv-run-script": "^0.4.1",
    "eslint": "^9.7.0",
    "eslint-plugin-jsdoc": "^48.7.0",
    "globals": "^15.8.0",
    "jsdoc": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "sass": "^1.69.5",
    "terser": "^5.26.0"
  }
}
