{
  "source": {
      "include": ["src/js"],
      "includePattern": ".js$"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
      "encoding": "utf8",
      "readme": "./src/README.md",
      "destination": "./build/docs/",
      "recurse": true,
      "verbose": true,
      "template": "./node_modules/clean-jsdoc-theme",
      "theme_opts": {
          "default_theme": "fallback-light"
      }
  },
  "markdown": {
      "hardwrap": false,
      "idInHeadings": true
  }
}
